<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.gn.cartoon.ui.activitys.LoginActivity">


    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/books_title"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        app:tl_divider_color="#1A000000"
        app:tl_divider_padding="13dp"
        app:tl_divider_width="1dp"
        app:tl_indicator_color="@color/base_title_bg"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_underline_color="@color/split_color"
        app:tl_underline_height="1px"
        app:tl_indicator_height="@dimen/dp2"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_padding="22dp"
        app:tl_textsize="14sp"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/base_title_bg"
        app:tl_textUnselectColor="@color/text_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/dp5"
        android:text="上次观看时间：2018年05月03"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/books_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
