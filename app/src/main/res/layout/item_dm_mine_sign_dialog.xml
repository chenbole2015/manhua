<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_marginRight="@dimen/dp20"
    android:layout_marginLeft="@dimen/dp20"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/text_color_white"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:layout_height="wrap_content">

       <TextView
           android:layout_width="wrap_content"
           android:textColor="@color/text_color"
           android:text="本周连续签到三天"
           android:id="@+id/item_mine_sign_title"
           android:layout_centerHorizontal="true"
           android:textSize="20sp"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_width="wrap_content"
           android:textColor="@color/text_color_flag"
           android:text="本周楼签2次，每周一重置"
           android:id="@+id/item_mine_sign_sub_title"
           android:layout_centerHorizontal="true"
           android:textSize="12sp"
           android:layout_marginTop="@dimen/dp3"
           android:layout_below="@+id/item_mine_sign_title"
           android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_below="@+id/item_mine_sign_sub_title"
            android:layout_marginTop="@dimen/dp2"
            android:id="@+id/item_dm_mine_sign_recycler_view"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="查看规则  >"
            android:layout_marginTop="@dimen/dp10"
            android:layout_below="@+id/item_dm_mine_sign_recycler_view"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />




    </RelativeLayout>

</android.support.constraint.ConstraintLayout>