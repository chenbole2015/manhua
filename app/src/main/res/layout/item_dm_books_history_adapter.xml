<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/item_dm_books_his_root"
        android:background="@color/text_color_white"
        android:layout_height="wrap_content">



    <ImageView
        android:layout_width="80dp"
        android:layout_marginRight="@dimen/dp5"
        android:id="@+id/item_dm_books_his_img"
        android:layout_height="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:id="@+id/item_dm_books_his_title"
        tools:text="一人之上"
        android:lines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp3"
        android:layout_toLeftOf="@+id/item_dm_books_his_logo"
        android:layout_toRightOf="@+id/item_dm_books_his_img"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:id="@+id/item_dm_books_his_sub"
        tools:text="一人之上"
        android:lines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/item_dm_books_his_title"
        android:layout_marginTop="@dimen/dp3"
        android:layout_toLeftOf="@+id/item_dm_books_his_logo"
        android:layout_toRightOf="@+id/item_dm_books_his_img"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="11sp"
        android:id="@+id/item_dm_books_his_time"
        tools:text="2018-03-05最新更新"
        android:layout_marginTop="@dimen/dp3"
        android:paddingBottom="@dimen/dp3"
        android:lines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/item_dm_books_his_img"
        android:layout_toLeftOf="@+id/item_dm_books_his_logo"
        android:layout_toRightOf="@+id/item_dm_books_his_img"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:id="@+id/item_dm_books_his_logo"
        tools:text="续看第200话"
        android:lines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:drawableTop="@drawable/pic_book_adapter"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp3"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>