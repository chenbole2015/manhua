<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/text_color_white"
    android:id="@+id/item_dm_home_hot_root"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/item_dm_flag_img"
        android:padding="@dimen/dp10"
        android:layout_centerHorizontal="true"
        android:layout_height="130dp" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="14sp"
        tools:text="dd"
        android:layout_marginTop="@dimen/dp2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"
        android:layout_below="@+id/item_dm_flag_img"
        android:id="@+id/item_dm_flag_title"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp10"
        tools:text="dd"
        android:lines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:id="@+id/item_dm_flag_detail"
        android:layout_below="@+id/item_dm_flag_title"
        android:layout_marginRight="@dimen/dp10"
        android:layout_height="20dp" />

</RelativeLayout>