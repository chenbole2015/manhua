<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.gn.cartoon.ui.activitys.MainActivity">

    <FrameLayout
        android:id="@+id/dm_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/dm_main_group_line" />

    <View
        android:layout_width="match_parent"
        android:background="@color/split_color"
        android:id="@+id/dm_main_group_line"
        android:layout_above="@+id/dm_main_group"
        android:layout_height="1px"/>

    <RadioGroup
        android:id="@+id/dm_main_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/dm_main_rb_home"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_gravity="bottom"
            android:textColor="@drawable/pic_dm_home_color_selector"
            android:paddingTop="@dimen/dp2"
            android:paddingBottom="@dimen/dp2"
            android:drawablePadding="@dimen/dp2"
            android:drawableTop="@drawable/pic_dm_home_selector"
            android:text="首页" />

        <RadioButton
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/pic_dm_home_color_selector"
            android:id="@+id/dm_main_rb_books"
            android:drawablePadding="@dimen/dp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="12sp"
            android:layout_gravity="bottom"
            android:paddingTop="@dimen/dp2"
            android:paddingBottom="@dimen/dp2"
            android:drawableTop="@drawable/pic_dm_books_selector"
            android:text="书架" />

        <RadioButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:id="@+id/dm_main_rb_community"
            android:drawablePadding="@dimen/dp2"
            android:gravity="center"
            android:textSize="12sp"
            android:paddingTop="@dimen/dp2"
            android:layout_gravity="bottom"
            android:paddingBottom="@dimen/dp2"
            android:textColor="@drawable/pic_dm_home_color_selector"
            android:drawableTop="@drawable/pic_dm_community_selector"
            android:text="社区" />

        <RadioButton
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:drawablePadding="@dimen/dp2"
            android:paddingTop="@dimen/dp2"
            android:layout_gravity="bottom"
            android:paddingBottom="@dimen/dp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textColor="@drawable/pic_dm_home_color_selector"
            android:id="@+id/dm_main_rb_mine"
            android:drawableTop="@drawable/pic_dm_mine_selector"
            android:text="我的" />


    </RadioGroup>

</RelativeLayout>
