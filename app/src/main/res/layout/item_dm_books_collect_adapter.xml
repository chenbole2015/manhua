<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/text_color_white"
        android:id="@+id/item_dm_books_collect_root"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80dp"
        android:layout_marginRight="@dimen/dp5"
        android:layout_centerHorizontal="true"
        android:id="@+id/item_dm_books_collect_img"
        android:layout_height="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:id="@+id/item_dm_books_collect_title"
        tools:text="一人之上"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp3"
        android:layout_below="@+id/item_dm_books_collect_img"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:id="@+id/item_dm_books_collect_sub"
        tools:text="一人之上"
        android:layout_below="@+id/item_dm_books_collect_title"
        android:layout_marginTop="@dimen/dp3"
        android:layout_marginBottom="@dimen/dp3"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>