<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp5"
    android:background="@drawable/shape_home_focus_item_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_dm_home_focus_image"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp1"
        android:layout_marginBottom="@dimen/dp1"
        android:scaleType="centerCrop"
        android:layout_height="160dp" />

    <View
        android:layout_width="match_parent"
        android:background="#05fc00"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/item_dm_home_focus_tv_page"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:drawableLeft="@drawable/pic_community_normal"
            android:layout_alignParentRight="true"
            android:id="@+id/item_dm_home_focus_tv_pause"
            android:textColor="@color/text_color" />


    </RelativeLayout>

</LinearLayout>